@{
    Layout = null;
}
@using CemSys2.ViewModel
@model LoginViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Login CemSys</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">


    <style>
        body {
            margin: 0;
            padding: 0;
            background: url('@Url.Content("~/fotos/fondo1.jpg")') center center no-repeat;
            background-size: cover;
            min-height: 100vh;
            position: relative;
        }

        .overlay {
            background-color: rgba(156, 224, 219, 0.4); /* #9ce0db con transparencia */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
        }

        .contenido {
            position: relative;
            z-index: 1;
        }

        .card-login {
            width: 100%;
            max-width: 340px;
            padding: 2rem;
            font-size: 1.1rem;
        }

            .card-login h3 {
                font-size: 1.5rem;
            }

            .card-login p {
                font-size: 1rem;
            }

            .card-login img {
                max-height: 500px;
            }

        .btn-ingresar {
            background-color: #338b85;
            color: #ffffff;
            border: none;
            padding: 10px 20px;
            font-size: 1.1rem;
            border-radius: 5px;
            cursor: pointer;
            width: 270px;
            display: block;
            text-align: center;
            margin-left: auto;
            margin-right: auto;
        }

            .btn-ingresar:hover {
                background-color: #287a6c;
            }
    </style>
</head>
<body>
    <div class="overlay"></div>

    <div class="contenido">
        <div class="container d-flex align-items-center justify-content-center min-vh-100">
            <div class="card shadow-lg card-login">
                <div class="text-center mb-4">
                    <img src="~/fotos/cemsysss.png" class="img-fluid mx-auto d-block" alt="Logo" />
                    <h3 class="fw-bold">Iniciar Sesión</h3>
                    <p class="text-muted">Accedé a tu cuenta</p>
                </div>

                <form asp-action="IniciarSesion" method="post">
                    <div class="mb-3">
                        <label for="usuario" class="form-label">Usuario</label>
                        <input type="text" class="form-control" id="usuario" asp-for="NombreUsuario" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Contraseña</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="password" asp-for="Clave" required>
                            <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                <i class="bi bi-eye" id="iconPassword"></i>
                            </button>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model?.MensajeError)) //si mensaje es distinto de null
                    {
                        <div class="alert alert-danger">@Model.MensajeError</div>
                    }

                    <div class="d-grid">
                        <button type="submit" class="btn-ingresar">Ingresar</button>
                    </div>
                </form>

                @if (ViewData["Login"] != null)
                {
                    <div class="alert alert-warning mt-2" role="alert">
                        @ViewData["Login"]
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordInput = document.getElementById('password');
            const icon = document.getElementById('iconPassword');

            const isPassword = passwordInput.type === 'password';
            passwordInput.type = isPassword ? 'text' : 'password';

            // Cambiar ícono
            icon.classList.toggle('bi-eye');
            icon.classList.toggle('bi-eye-slash');
        });
    </script>
</body>
</html>
