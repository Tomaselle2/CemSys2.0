<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Cache-Control" content="no-store" />
    <title>CemSys</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap" rel="stylesheet">

</head>
<body>
    <div class="d-flex">

        <nav class="sidebar bg-white border-end p-3">
            <a class="navbar-brand mb-4 d-block text-center" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/fotos/logo.png" alt="CemSys Logo" style="height: 40px;" />
            </a>

            <ul class="nav flex-column">

                <li class="nav-item">
                    <a class="nav-link text-dark icono-menu" href="#">
                        <i class="bi bi-person"></i> <span class="nav-text">@Context.Session.GetString("nombreUsuario")</span>
                    </a>
                </li>


                <li class="nav-item">
                    <a class="nav-link text-dark icono-menu" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-file-earmark"></i> <span class="nav-text">Trámites</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark icono-menu" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door"></i> <span class="nav-text">Concesiones</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark icono-menu" asp-controller="Introduccion" asp-action="Index">
                        <i class="bi bi-person-up"></i></i> <span class="nav-text">Introducciones</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark icono-menu" asp-controller="Secciones" asp-action="Index">
                        <i class="bi bi-grid-3x3"></i>
                        <span class="nav-text">Secciones</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark icono-menu" asp-controller="Personas" asp-action="Index">
                        <i class="bi bi-person-vcard"></i> <span class="nav-text">Personas</span>
                    </a>
                </li>               

                @if (Context.Session.GetInt32("Rol") == 2)
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark icono-menu" asp-controller="Reportes" asp-action="Index">
                            <i class="bi bi-file-bar-graph"></i> <span class="nav-text">Reportes</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark icono-menu" asp-controller="Configuracion" asp-action="Index">
                            <i class="bi bi-gear"></i> <span class="nav-text">Configuración</span>
                        </a>
                    </li>                 
                }

                <li class="nav-item">
                    <a class="nav-link cerrar-sesion" asp-controller="Login" asp-action="CerrarSesion">
                        <i class="bi bi-box-arrow-right"></i> <span class="nav-text">Cerrar sesión</span>
                    </a>
                </li>



            </ul>
        </nav>



        <div class="content-area flex-grow-1">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    </environment>

    <script src="~/js/modalConfirmacionEliminacion.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
